---
import EducationTimeline from './EducationTimeline.jsx';
import i18next from '../i18n.js';

const { lang } = Astro.props;
i18next.changeLanguage(lang || 'de');
---

<section id="education" class="md:-mt-28">
  <h1
    class="relative text-5xl sm:text-6xl md:text-7xl lg:text-8xl text-white font-saira font-black z-10 text-center"
    data-i18n="educationTitle"
  >
    {i18next.t('educationTitle')}
  </h1>

  <h2
    class="relative text-3xl sm:text-4xl md:text-5xl lg:text-6xl text-primary font-dafoe font-regular z-20 text-center led-effect-aboutMe transform -translate-y-20 sm:-translate-y-[100px] md:-translate-y-[125px] lg:-translate-y-[135px] translate-x-6 sm:translate-x-[38px] md:translate-x-[40px] lg:translate-x-[30px]"
    data-i18n="educationSubtitle"
  >
    {i18next.t('educationSubtitle')}
  </h2>

  <EducationTimeline lang={lang} client:load />
</section>

<style>
  .led-effect-aboutMe {
    text-shadow: 0 0 5px #9d3be4, 0 0 10px #9d3be4, 0 0 15px #9d3be4;
  }
</style>
