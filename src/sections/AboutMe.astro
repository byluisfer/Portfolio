---
import i18next from '../i18n.js';
const { lang } = Astro.props;
i18next.changeLanguage(lang || 'de');

const aboutDescription = i18next.t('aboutMeDescription');
---

<section class="h-screen">
    <!-- TÃ­tulo de la secciÃ³n -->
    <h1 id="about-title" class="relative text-5xl sm:text-6xl md:text-7xl lg:text-8xl text-black dark:text-white font-saira font-black z-10 text-center">
        {i18next.t('aboutmeTitle')}
    </h1>

    <!-- SubtÃ­tulo -->
    <h2 id="about-subtitle" class="relative text-3xl sm:text-4xl md:text-5xl lg:text-6xl text-primary font-dafoe font-regular z-20 text-center transform -translate-y-20 sm:-translate-y-[100px] md:-translate-y-[125px] lg:-translate-y-[135px] translate-x-6 sm:translate-x-[38px] md:translate-x-[40px] lg:translate-x-[30px] text-shadow-led-effect-h2 dark:text-shadow-dark-led-effect-h2">
        {i18next.t('aboutmeSubtitle')}
    </h2>

    <div class="flex flex-col md:flex-row items-center md:items-start -mt-10 sm:-mt-16 lg:-mt-20 space-y-4 sm:space-y-0 sm:space-x-8">
        <!-- Imagen a la izquierda -->
        <img src="/perfil_photo.png" alt="Foto de About Me" loading="lazy" class="w-64 sm:w-80 md:w-96 lg:w-96 h-auto object-cover rounded-lg">

        <!-- Contenedor del texto a la derecha -->
        <div class="text-center sm:text-left space-y-6">
            <h1 id="about-greeting" class="text-black mb-10 dark:text-white text-lg sm:text-xl md:text-2xl lg:text-3xl font-archivo">
                {i18next.t('aboutmeGreeting')}
                <span class="inline-block transform origin-custom-origin hover:animate-wave cursor-pointer">ðŸ‘‹</span>
            </h1>
            <p id="about-description" class="text-lg sm:text-xl md:text-xl lg:text-xl text-black dark:text-white font-mplus font-regular leading-snug" set:html={aboutDescription}></p>          

            <!-- Contenedor flex para idiomas y redes sociales -->
            <div class="flex flex-col sm:flex-row sm:space-x-8">
                <!-- Div de idiomas -->
                <div class="relative rounded-xl border-2 border-black mt-2 sm:mt-10 dark:border-white py-4 px-6 text-black dark:text-white w-[24rem]"> <!-- CambiÃ© max-w-xs a max-w-lg -->
                    <h2 class="text-2xl font-archivo mb-4">{i18next.t('languages')}</h2>
                    <div class="space-y-2">
                        <!-- Deutsch -->
                        <div class="flex justify-between items-center">
                            <span id="german-language" class="font-mplus text-lg">{i18next.t('german')}</span>
                            <div class="flex space-x-1">
                                <img src="/star.svg" alt="" class="w-6 sm:w-8">
                                <img src="/star.svg" alt="" class="w-6 sm:w-8">
                                <img src="/star.svg" alt="" class="w-6 sm:w-8">
                                <img src="/star.svg" alt="" class="w-6 sm:w-8">
                            </div>
                        </div>
                        <!-- Spanisch -->
                        <div class="flex justify-between items-center">
                            <span id="spanish-language" class="font-mplus text-lg">{i18next.t('spanish')}</span>
                            <div class="flex space-x-1">
                                <img src="/star.svg" alt="" class="w-6 sm:w-8">
                                <img src="/star.svg" alt="" class="w-6 sm:w-8">
                                <img src="/star.svg" alt="" class="w-6 sm:w-8">
                                <img src="/star.svg" alt="" class="w-6 sm:w-8">
                                <img src="/star.svg" alt="" class="w-6 sm:w-8">
                            </div>
                        </div>
                        <!-- Englisch -->
                        <div class="flex justify-between items-center">
                            <span id="english-language" class="font-mplus text-lg">{i18next.t('english')}</span>
                            <div class="flex space-x-1">
                                <img src="/star.svg" alt="" class="w-6 sm:w-8">
                                <img src="/star.svg" alt="" class="w-6 sm:w-8">
                                <img src="/star.svg" alt="" class="w-6 sm:w-8">
                                <img src="/star.svg" alt="" class="w-6 sm:w-8">
                            </div>
                        </div>
                    </div>
                </div>                

                <!-- Div de redes sociales -->
                <div class="flex flex-row sm:flex-col justify-center sm:justify-start mt-4 sm:mt-10 space-x-6 sm:space-x-0 sm:space-y-5">
                    <a href="https://github.com/byluisfer" class="social-icon" target="_blank" aria-label="Github">
                        <i class="fab fa-github fa-2x text-black dark:text-white"></i>
                    </a>
                    <a href="https://www.linkedin.com/in/luisfernandezz/" class="social-icon" target="_blank" aria-label="Linkedin">
                        <i class="fab fa-linkedin fa-2x text-black dark:text-white"></i>
                    </a>
                    <a href="mailto:luisferdass@gmail.com" class="social-icon" target="_blank" aria-label="Gmail">
                        <i class="fa-regular fa-envelope fa-2x text-black dark:text-white"></i>
                    </a>
                    <a href="/CV_Luis_Fernandez.pdf" download="/CV_Luis_Fernandez.pdf" class="social-icon" target="_blank" aria-label="CV">
                        <i class="fa-regular fa-address-book fa-2x text-black dark:text-white"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<style is:global>
    .led-effect-aboutMe {
        text-shadow: 0 0 5px #9D3BE4, 0 0 10px #9D3BE4, 0 0 15px #9D3BE4;
    }

    .social-icon {
        transition: transform 0.3s ease;
    }

    .social-icon:hover {
        transform: scale(1.2);
        filter: drop-shadow(0px 0px 5px rgb(5, 53, 86));
    }
</style>
